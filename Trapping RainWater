import java.util.*;

public class javatest{
public static int trappedwater(int height[]){
    int n = height.length;
    //left max height
    int leftmax[] = new int[n];
    leftmax[0]=height[0];
    for(int i=1;i<n;i++){
        leftmax[i]=Math.max(height[i],leftmax[i-1]);
    }
    //right max height
    int rightmax[] = new int[n];
    rightmax[n-1]=height[n-1];
    for(int j=n-2;j>=0;j--){
        rightmax[j]=Math.max(rightmax[j+1],height[j]);
    }
    //loop for min
    int watertrapped = 0;
    for(int i=0;i<n;i++){
        int weight = Math.min(leftmax[i] , rightmax[i]);
        //calculation of trapped water
        watertrapped += weight-height[i];
    }
    return watertrapped;
}
public static void main(String args[]){
    int height[] = {4,2,0,6,3,2,5};
    
    System.out.println(trappedwater(height));

}
}
//first finding out leftmax and rightmax in auxillary arrays 
//then comparing them and finding min between leftmax and rightmax
//calculating trapped water = (weight-height)*width here width is considered 1 weight is min of leftmax and rightmax 
